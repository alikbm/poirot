%table.table.table-stripped.table-hover
  %thead
    %tr
      %th Email
      %th Subject
      %th Query
      %th
  %tbody
    - @notifications.each do |notification|
      %tr
        %td= notification.email
        %td= truncate(notification.subject, length: 30)
        %td= truncate(notification.query, length: 30)
        %td= link_to "Delete", notification, method: :delete, confirm: "Are you sure you want to delete this notification?"
